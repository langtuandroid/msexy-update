<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:orientation="vertical" >

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#222222"
                android:gravity="center"
                android:text="Hotgirl Việt hàng khủng Hàn Quốc - Việt Nam"
                android:textColor="#E1E1E1"
                android:textSize="18dp"
                android:textStyle="bold" />
            <VideoView android:scrollbars="none" android:fadeScrollbars="false" android:scrollbarAlwaysDrawVerticalTrack="false" android:layout_gravity="center_vertical|center_horizontal" android:scrollbarAlwaysDrawHorizontalTrack="false" android:layout_height="200dp" android:layout_width="wrap_content" android:id="@+id/videoView1"></VideoView>
            <MediaController android:id="@+id/mediaController1" android:layout_gravity="bottom" android:layout_height="wrap_content" android:layout_width="fill_parent"></MediaController>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#80000000" >

            </FrameLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="#222222" >

                <TextView
                    android:id="@+id/txtDownload"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="View : 300"
                    android:textColor="#B7B7B7"
                    android:textSize="16dp"
                    android:textStyle="bold|italic" >

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/clipkhac" />

            </LinearLayout>

        </TableLayout>
    </LinearLayout>

</RelativeLayout>